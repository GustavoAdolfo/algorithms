@using Microsoft.AspNetCore.Identity;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form method="post" asp-controller="Account" asp-action="Logout">
        @User.Identity.Name
        <input type="submit" value="Logout" class="navbar-btn btn btn-danger" />
    </form>
}
else
{
    <a class="btn btn-xs btn-default navbar-btn" asp-action="Login" asp-controller="Account">Login</a>
    <a class="btn btn-xs btn-default navbar-btn" asp-action="Register" asp-controller="Account">Register</a>
}